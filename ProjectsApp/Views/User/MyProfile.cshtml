                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="container body" style="width:inherit;">
              
                <div class="right_col" role="main">
                    <!-- /top navigation -->
                    <!-- page content -->
                    <div class="row">

                        <div class="col-md-3">
                            <div style="padding-left:30%;">
                                <br />
                                <img src=@ViewBag.Url alt="..." style="width:225px; margin-top:5%;">
                                <br />
                                <br />
                                <a style="font-size: 16px;" id="changePass" href="#"> <i class="fa fa-user-secret" style="margin-right:4%"> </i>Change Password</a>
                                <br />

                                <br /><a href="#" id="editBtn" style="font-size: 16px;"><i class="fa fa-pencil" style="margin-right:4%"></i>Edit Profile</a>
                                <br><br>

                                <p style="font-size: 17px;"><i class="fa fa-picture-o" style="margin-right:4%"></i>Change profile image</p>

                                @using (Html.BeginForm("ChangeProfile",
"User",
FormMethod.Post,
new { enctype = "multipart/form-data" }))
                                {
                                    <br />
                                    <input type="file" class="custom-file-input" name="file" id="file" />
                                    <br>
                                    <input type="submit" value="Upload Image" />
                                    <br><br>
                                    @ViewBag.Message
                                }

                                <br />


                            </div>
                            <br />
                            <br />

                            <br />


                        </div>
                        <div class="col-md-2">
                            <br />
                            <br />
                            <br />
                            <p style="font-size:16px; text-align:right;">| Name |</p>
                            <br />
                            <p style="font-size:16px; text-align:right;">| E-mail |</p>
                            <br />
                            <p style="font-size:16px; text-align:right;">|Phone Number |</p>
